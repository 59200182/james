<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="40dp"
    android:background="@color/shezi_title_bk"
    android:padding="8dp" >

    <RelativeLayout
        android:id="@+id/more_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/shezi_title_bk"
        android:padding="8dp" >

        <ImageView
            android:id="@+id/more_mei_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_action_mei" />

        <TextView
            style="@style/textsize_24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/more_mei_img"
            android:text="更多" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_more_msg_item"
            android:onClick="onBoutiqueClick "
            android:text="精品应用"
            android:textSize="22sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/more_title_layout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="8dp" >

            <TextView
                android:id="@+id/set_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/shezi_msg_bk"
                android:text="设置"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/set_edit"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_bottom_tab_selected" />

            <TextView
                style="@style/textsize_18"
                android:text="消息提醒" />

            <EditText
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_gradient" />

            <RelativeLayout
                android:id="@+id/line_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/shezi_msg_bk" >

                <TextView
                    android:id="@+id/moshi_txt"
                    style="@style/textsize_18"
                    android:text="非Wifi下使用省流量模式" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_onoff_item"
                    android:textOn=" "
                    android:textOff=" " />

                <EditText
                    android:id="@id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/switch1"
                    android:background="@drawable/line_gradient" />
            </RelativeLayout>

            <TextView
                android:id="@+id/share_txt"
                style="@style/textsize_18"
                android:text="分享设置" />

            <EditText
                android:id="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_gradient" />

            <TextView
                android:id="@+id/invite_txt"
                style="@style/textsize_18"
                android:text="邀请好友使用美团" />

            <EditText
                android:id="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_gradient" />

            <RelativeLayout
                android:id="@+id/txtsize_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shezi_msg_bk" >

                <TextView
                    android:id="@+id/size_txt"
                    style="@style/textsize_18"
                    android:text="字号大小" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:text="中字号（默认）"
                    android:textSize="18sp" />

                <EditText
                    android:id="@id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/size_txt"
                    android:background="@drawable/line_gradient" />
            </RelativeLayout>

            <TextView
                style="@style/textsize_18"
                android:text="清空缓存" />

            <EditText
                android:id="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_gradient" />

            <TextView
                android:id="@+id/else_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/shezi_msg_bk"
                android:text="其他"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/else_edit"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_bottom_tab_selected" />

            <TextView
                style="@style/textsize_18"
                android:text="扫一扫" />

            <EditText
                android:id="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_gradient" />

            <TextView
                style="@style/textsize_18"
                android:text="意见反馈" />

            <EditText
                android:id="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_gradient" />

            <TextView
                style="@style/textsize_18"
                android:text="支持帮助" />

            <EditText
                android:id="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_gradient" />

            <TextView
                style="@style/textsize_18"
                android:text="关于美团" />

            <EditText
                android:id="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_gradient" />

            <TextView
                style="@style/textsize_18"
                android:text="检查更新" />

            <EditText
                android:id="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_gradient" />

            <TextView
                style="@style/textsize_18"
                android:text="加入我们" />

            <EditText
                android:id="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_gradient" />

            <TextView
                style="@style/textsize_18"
                android:text="诊断网络" />

            <EditText
                android:id="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_gradient" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>